{
  "name": "vega-themes",
  "version": "2.2.0",
  "description": "Themes for stylized Vega and Vega-Lite visualizations.",
  "keywords": [
    "vega",
    "vega-lite",
    "themes",
    "style"
  ],
  "license": "BSD-3-Clause",
  "author": {
    "name": "UW Interactive Data Lab",
    "url": "http://idl.cs.washington.edu"
  },
  "contributors": [
    {
      "name": "Emily Gu",
      "url": "https://github.com/emilygu"
    },
    {
      "name": "Arvind Satyanarayan",
      "url": "http://arvindsatya.com"
    },
    {
      "name": "Jeffrey Heer",
      "url": "http://idl.cs.washington.edu"
    },
    {
      "name": "Dominik Moritz",
      "url": "https://www.domoritz.de"
    }
  ],
  "main": "build/vega-themes.js",
  "module": "build/index.js",
  "unpkg": "build/vega-themes.min.js",
  "jsdelivr": "build/vega-themes.min.js",
  "typings": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/vega/vega-themes.git"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf build && mkdir build",
    "prettierbase": "prettier '{src,examples}/**/*.{ts,html,css}'",
    "format": "tslint -p . --fix && yarn prettierbase --write",
    "lint": "tslint -p . && yarn prettierbase --check",
    "postbuild": "terser build/vega-themes.js -cm > build/vega-themes.min.js",
    "prebuild": "yarn clean && tsc",
    "deploy:gh": "yarn build && rsync -r build/* dist/build && gh-pages -d dist",
    "prepublishOnly": "yarn build",
    "preversion": "yarn lint",
    "serve": "browser-sync start -s -f build examples --serveStatic examples",
    "start": "concurrently --kill-others -n Server,Typescript,Rollup 'yarn serve' 'tsc -w' 'rollup -c -w'"
  },
  "devDependencies": {
    "@types/node": "^11.11.0",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.1.0",
    "gh-pages": "^2.0.1",
    "prettier": "^1.16.4",
    "rollup": "^1.6.0",
    "terser": "^3.17.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "vega-lite": "^3.0.0-rc14"
  },
  "dependencies": {
    "vega-typings": "^0.6.0"
  }
}
